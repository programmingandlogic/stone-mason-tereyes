import stanford.karel.*;

public class StoneMasonKarel extends SuperKarel {

	public void run() {
		buildUp();
		crossArch();
		buildDown();
		crossArch();
		buildUp();
		crossArch();
		buildDown();
		
	}
	private void buildUp() {
		turnLeft();
		if (noBeepersPresent()){
			putBeeper();
		}
		for (int i = 0; i < 4; i++){
			move();
		}
			
	}
	private void crossArch() {
		if (facingNorth()){
			turnRight();
		for (int i = 0; i < 4; i++){
			move();
			}
		}
		if (facingSouth()){
			turnLeft();
		for (int i = 0; i < 4; i++){
			move();
			}
		}

	}
	private void buildDown(){
		turnLeft();
		if (noBeepersPresent()){
			putBeeper();
		}
		if (frontIsClear()){
		for (int i = 0; i < 4; i++){
				move();
			}
		}
	}
}
